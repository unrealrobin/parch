{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Parch",
  "version": "0.1.0",
  "identifier": "com.robin-lifshitz.parch",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Parch - UML Float",
        "width": 1200,
        "height": 800,
        "minWidth": 600,
        "minHeight": 400,
        "resizable": true,
        "maximizable": true,
        "minimizable": true,
        "closable": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "decorations": false,
        "transparent": false,
        "shadow": false,
        "center": true,
        "focus": true,
        "fullscreen": false,
        "visible": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https: blob:; font-src 'self' data: https:; connect-src 'self' https: wss: ws:; media-src 'self' data: blob:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app", "msi", "deb", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Robin Lifshitz",
    "copyright": "Copyright Â© 2025 Robin Lifshitz",
    "category": "DeveloperTool",
    "shortDescription": "Lightweight UML diagram editor with floating window",
    "longDescription": "Parch is a cross-platform desktop application for creating and viewing Mermaid diagrams in a floating, always-accessible window designed for developers."
  }
}
